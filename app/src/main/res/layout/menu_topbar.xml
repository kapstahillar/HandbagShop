<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    app:layout_constraintTop_toBottomOf="parent">

    <TextView
        android:id="@+id/catalog_button"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="&lt; Catalog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="Search"
        app:layout_constraintLeft_toRightOf="@+id/catalog_button"
        app:layout_constraintRight_toLeftOf="@+id/filter_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/filter_button"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Filters"
        app:layout_constraintLeft_toRightOf="@+id/search_bar"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>